<div class="container">
  <h1>Post |</h1>

  <h3><%= @post.title %></h3>

  <div class="row">
    <h5 class="two columns">Comments |</h5>
    <%= link_to "Create a Comment", new_post_comment_path(@post), :class => 'button' %>
  </div>

  <% @post.comments.each do |comment| %>
  <div class="row">
    <h6 class="ten columns"><%= comment.content %></h6>
    <p><%= link_to "Edit comment", edit_post_comment_path(@post, comment), :class => 'button' %></p>
    <p><%= link_to "Delete comment", post_comment_path(@post, comment), method: :delete, data: {confirm: 'Are you sure?'}, remote: true, :class => 'button' %></p>
  </div>
  <% end %>

  <br>

  <%= link_to "Return to Subreddit", subreddit_path(@post.subreddit), :class => 'button' %>
</div>
